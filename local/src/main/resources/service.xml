<?xml version="1.0" encoding="UTF-8"?>
<service name="concessions_local" package="com.concessions.local">
	<entity name="device" db-name="device">
		<attribute name="deviceId" type="string" />
		<attribute name="deviceType" type="enum" enum-values="SERVER KITCHEN POS" />
		<attribute name="deviceIp" type="string" />
		<attribute name="devicePort" type="int" />
		
		<finder unique="true">
            <finder-attribute name="deviceId"/>
        </finder>
        
        <finder>
        	<finder-attribute name="deviceType"/>
        </finder>
	</entity>
	
	<entity name="locationConfiguration" persistence="true" db-name="location_configuration">
		<attribute name="organizationId" type="long"/>
		<attribute name="organizationName" type="string"/>
		<attribute name="locationId" type="long"/>
		<attribute name="locationName" type="string"/>
		<attribute name="menuId" type="long"/>
		<attribute name="menuName" type="string"/>
		<attribute name="pin" type="int" />
	</entity>
</service>